{{#if errorCode}}
  <h3>This drone already exists, sorry!</h3>
  <hr />
{{/if}}
<h2>Create a new drone</h2>
<hr />
<form action='/drones/create' method='post' class='form'>
  <div class='form'>
    <label for='name'>Name of Drone </label>
    <input type='text' name='name' required />
  </div>
  <div class='form'>
    <label for='propellers'>Propellers</label>
    <input type='number' name='propellers' required />
  </div>
  <div class='form'>
    <label for='maxSpeed'>Maximum Speed</label>
    <input type='number' name='maxSpeed' required />
  </div>
  <div class='form'>
    <input type='submit' value='Save Drone' />
  </div>
</form>